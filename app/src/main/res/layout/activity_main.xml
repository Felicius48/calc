<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Label1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:fontFamily="sans-serif-medium"/>

    <EditText
        android:id="@+id/num1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/Label"
        app:layout_constraintLeft_toLeftOf="@id/Label"
        app:layout_constraintRight_toRightOf="@id/Label"
        android:layout_marginTop="50dp"
        android:hint="@string/hintNum1"
        android:inputType="number"
        />
    <LinearLayout
        android:id="@+id/oper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num2"
        app:layout_constraintLeft_toLeftOf="@id/num2"
        app:layout_constraintRight_toRightOf="@id/num2"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/oneBt1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:layout_marginHorizontal="10dp"
            android:onClick="click"/>
        <Button
            android:id="@+id/oneBt2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:layout_marginHorizontal="10dp"
            android:onClick="click"/>
        <Button
            android:id="@+id/oneBt3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="*"
            android:layout_marginHorizontal="10dp"
            android:onClick="click"/>
        <Button
            android:id="@+id/oneBt4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="/"
            android:layout_marginHorizontal="10dp"
            android:onClick="click"/>

    </LinearLayout>

    <EditText
        android:id="@+id/num2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/num1"
        app:layout_constraintLeft_toLeftOf="@id/num1"
        app:layout_constraintRight_toRightOf="@id/num1"
        android:layout_marginTop="50dp"
        android:hint="@string/hintNum2"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/resField"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/oper"
        app:layout_constraintLeft_toLeftOf="@id/oper"
        app:layout_constraintRight_toRightOf="@id/oper"
        android:layout_marginTop="50dp"
        android:text="@string/resField"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/btRasschet"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/btLabel"
        app:layout_constraintTop_toBottomOf="@id/resField"
        app:layout_constraintLeft_toLeftOf="@id/resField"
        app:layout_constraintRight_toRightOf="@id/resField"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="204dp"
        android:layout_height="50dp"
        android:onClick="btClear"
        android:text="clear"
        app:layout_constraintLeft_toLeftOf="@id/btRasschet"
        app:layout_constraintRight_toRightOf="@id/btRasschet"
        app:layout_constraintTop_toBottomOf="@id/btRasschet"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>